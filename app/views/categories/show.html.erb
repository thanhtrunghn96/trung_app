 <div class ="row">
    <div class ="col-lg-3">
      <h1 class="category"><%= t".Category"%></h1>
      <div class="list-group">
        <% @category.each do |c|%>
          <%= link_to c.name,category_path(c), class: "list-group-item"%>
        <% end %>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading" style = "text-align:center">Your Shop</div>
        <div class="panel-body">
          <%= link_to 'All items',products_path, class: "link-sell" %>
        </div>
        <div class="panel-body">
          <%= link_to 'Sold', user_sold_path, class: "link-sell" %>
        </div>
      </div>
    </div>
    <div class = "col-lg-9">
      <div class = "row">
       <%= render partial: "shared/formproduct",  collection: @products, as: "p" %>
      </div>
    </div>
    <div style="float:right;margin-right: 67px;"><%= paginate @products %></div>
</div>
