<div class="row">
	<h1 class="title1">Update Category</h1> 
</div>
<div class="col-lg-offset-3 col-lg-6">
	<%= form_for @category, html: {class: "form-horizontal"} do |f| %>
	<div class="form-group">
		<%= f.label :name, "Name"%>
		<%= f.text_field :name, class: "form-control", placeholder: "Enter category name", value:"#{@category.name}" %>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-4">
			<%= f.submit "Update Category", class: "btn btn-success" %>
		</div>
	</div>
	<% end %>
</div>
