<div class="row"style ="margin-top: 124px;">
	<h1><%= t ".detail order"%></h1>
	<table class="table table-striped" style="">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col"><%= t ".name" %></th>
				<th scope="col"><%= t ".quantity" %> </th>
				<th scope="col"><%= t ".price" %></th>
				<th scope="col"><%= t ".seller"%></th>
			</tr>
		</thead>
		<tbody>
		<% @cart.orders.each.with_index(1) do |orders, index| %>
			<tr>
				<td><%= index %></td>
				<td><%= orders.product_name %></td>
				<td><%= orders.quantity %></td>
				<td><%= number_to_currency(orders.total_price) %></td>
				<% if orders.product.user_id.nil? %>
					<td>ZinZa Web</td>
				<% else %>
					<td><%= orders.product.user.name %></td>
				<% end %>
			</tr>
		<% end %>
		</tbody>
		</table>
		<center><p style = "font-size: 20px;"><%= t ".total"%>: <strong><%=number_to_currency(@cart.total_price)%></strong></p></center>
</div>

