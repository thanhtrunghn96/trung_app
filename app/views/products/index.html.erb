<%= render "shared/header" %>
<div class="container">
  <div class="row">
    <h1>Products</h1>
    <%= link_to 'New Product', new_product_path, class: "btn btn-primary"%>
    <div style="float: right;margin-bottom: 15px;">
      <%= form_tag(products_path, method: :get) do %>
      <%= text_field_tag :search %>
      <%= submit_tag 'Search' %>
      <% end %>
    </div>
    <table class="table table-bordered table-hover" style="text-align:center">
      <%= link_to 'Oldest', products_path(sort_by: "oldest")%> |
      <%= link_to 'Newest', products_path(sort_by: "newest")%> |
      <%= link_to 'Name', products_path(sort_by: "name")%> |
      <%= link_to 'Price', products_path(sort_by: "price")%> |
      <br>
      <tr>
        <th>#</th>
        <th>Category</th>
        <th>Name</th>
        <th>Avatar</th>
        <th>Price</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Order</th>
      </tr>
      <% @product.each.with_index(1) do |product, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= product.category.name%></td>
        <td><%= product.name %></td>
        <td><%= image_tag product.image_link_url, width:"120px", height:"120px"%></td>
        <td><%=number_to_currency(product.price) %></td> 
        <td>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
          <span class="glyphicon-class"> <%= link_to 'Show',  product_path(product)%></span>
        </td>
        <td>
         <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span>
         <span class="glyphicon-class"><%= link_to 'Edit',  edit_product_path(product) %> </span>
        </td>
        <td>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <span class="glyphicon-class"><%= link_to 'Delete', product_path(product),
           method: :delete,
           data: { confirm: 'Are you sure?' } %></span>
        </td>
        <td>
          <%= form_for Order.new do |order|%>
          <%= order.hidden_field :product_id, value: product.id %>
          <%= order.submit 'Add to Cart', class: "btn btn-primary" %> 
          <%= order.number_field :quantity, style: "width: 56px; height: 33px;margin-top: 9px;margin-left:72px", value: 1, min: 1, class: "form-control" %>
          <% end %> 
        </td>
      </tr>
      <% end %>
    </table>
    <div style="float:right;margin-right: 67px;"><%= paginate @product %></div>
  </div>
</div>
<%= render "shared/footer" %>
